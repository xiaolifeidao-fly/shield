{
    "compilerOptions": {
      "target": "ES2022",
      "module": "NodeNext",
      "declaration": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "moduleResolution": "nodenext",
      "esModuleInterop": true,
      "baseUrl": "./",  
      "paths": {
        "@/*": ["./*"],
        "@api/*": ["./api/*"],
        "@utils/*": ["./utils/*"],
        "@model/*": ["./model/*"],
        "@enums/*": ["./enums/*"]
      }
    },
    "include": ["**/*", "../client/src/utils/store/conf.ts"]
  }
  
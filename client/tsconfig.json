{
  "compilerOptions": {
    "target": "ES2020",                                  
    /* Modules */
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,     
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,                                     
    "skipLibCheck": true  ,                             
    "outDir": "./dist",
    "types": ["node"],
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "baseUrl": "./",
    "paths": {
      "@src/*": [
        "./src/*"
      ],
      "@api/*": [
        "../common/api/*"
      ],
      "@utils/*": [
        "../common/utils/*"
      ],
      "@model/*": [
        "../common/model/*"
      ],
      "@api/*": [
        "../common/api/*"
      ],
      "@enums/*": [
        "../common/enums/*"
      ]
    }
  },
  "include": ["src/**/*", "src/types/**/*", "../common/utils/**/*", "../common/utils/store/web.ts", "../common/utils/store/local.ts"],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    },
    "files": true,
    "transpileOnly": false
  }
}
